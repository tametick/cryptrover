#!/bin/sh

for arg in "$@"
do
	if [ $arg = "--with-pdc" ]; then
		PDC=1;
	fi
	if [ $arg = "--debug" ]; then
		DBG=1;
	fi
done

linux_pdc() { 
	if [ ! -e lib/libXCurses.a ]; then
		mkdir tmp ;
		cd tmp ;
		wget http://heanet.dl.sourceforge.net/sourceforge/pdcurses/PDCurses-3.3.tar.gz ;
		tar -xzf PDCurses-3.3.tar.gz ;
		cd PDCurses-3.3 ;
		./configure
		cd x11 ;
		cp Makefile Makefile.backup ;
		sed s/\-O2/\-Os/ Makefile.backup > Makefile
		make ;
		cp libXCurses.a ../../../lib/
		cd ../../../
		rm -rf tmp/
	fi
	echo MODE=PDC > config
}
linux() {
	echo "" > config
}
windows() {
	if [ ! -e lib/libpdcurses.a ]; then
		wget http://cryptrover.googlecode.com/files/SDL_mixer.dll ;
		wget http://cryptrover.googlecode.com/files/SDL.dll ;
		wget http://cryptrover.googlecode.com/files/libvorbisfile-3.dll ;
		wget http://cryptrover.googlecode.com/files/libvorbis-0.dll ;
		wget http://cryptrover.googlecode.com/files/libogg-0.dll ;
		wget -P lib/ http://cryptrover.googlecode.com/files/libpdcurses.a ;
	fi
	echo "" > config
}

if [ "$WINDIR" = "" ]; then
	if [ "$PDC" = "1" ]; then
		linux_pdc ;
	else
		linux ;
	fi
else
	windows ;
fi

if [ "$DBG" = "1" ]; then
	echo DBG=1 >> config;
fi
